@using X.PagedList
@using X.Web.PagedList
@model IPagedList<Size>;//Con esto le indico el tipo de modelo que va a recibir esta vista, le pasó este tipo porque en el controlador le paso un parametro de tipo
@{
    ViewData["Title"] = "List of Size";
}

<div class="row w-60 mb-3">
    <div class="col-5">
        <h1 style="color:white">List of Size</h1>
    </div>
</div>
<table class="table  table-dark table-hover w-25 " style="background-color: #001219">

    <thead style="color:white">
        <tr>
            <th>Size</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody style="color:white">
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr id="@item.SizeId">
                    <td>@Html.Raw(@item.SizeNumber)</td>
                    <td>
                        <a asp-controller="Size" asp-action="Details" asp-route-id="@item.SizeId" asp-route-returnUrl="(@Context.Request.Path+@Context.Request.QueryString)" class="btn" style="background-color:darkslateblue">
                            <i class="bi bi-info"></i>
                            Shoes
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No hay datos en la lista</td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Pager" model="@Model" />
