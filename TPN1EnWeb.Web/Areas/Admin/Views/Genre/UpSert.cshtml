@model GenreEditVM
@{
    ViewData["Title"] = "Add/Edit Genre";
}
<form method="post" asp-controller="Genre" asp-action="UpSert">
    <input type="hidden" asp-for="GenreId"/>
    <input type="hidden" asp-for="ReturnUrl" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> @(Model.GenreId==0? "Add Genre":"Edit Genre")</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> @*Este span es para que me muestre el mensaje de "registro duplicado"*@
    </div>
    <div class="mb-3">
        <label asp-for="GenreName"></label>@*Esto es como el titulo de nuestro input para agregar datos*@
        <input asp-for="GenreName" class="form-control"/>@*Esto es para ingresar el Colour nuevo*@
        <span asp-validation-for="GenreName" class="text-danger"></span> @*Este span es para que me muestre el mensaje de "Debe ingresar un registro"*@
    </div>
    @if (Model.GenreId == 0)
    {
        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i>
            Confirm
        </button>
    }
    else
    {
        <button type="submit" class="btn btn-warning">
            <i class="bi bi-save"></i>
            Confirm
        </button>
    }

    <a asp-controller="Genre" asp-action="Index" class="btn btn-info">
        @*Con esto indico con que controlador manejar y que acción realizar
        en este caso es regresar a la lista*@
        <i class="bi bi-arrow-return-left"></i>
        Back to List
    </a>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}