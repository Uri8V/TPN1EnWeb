@model SizeListVM
@{
    ViewData["Title"] = "List of Shoes";
}
<div class="row mb-5" style="color:#ffffff; font-style:italic;">
    <div class="col-auto"><h1>Shoe:</h1></div>
    <div class="col-auto m-1 text-center align-content-center align-items-center" style="border:dashed"><h4> Brand: @Model.Shoe.Brands!.BrandName</h4></div>
    <div class="col-auto m-1 text-center align-content-center align-items-center" style="border:dashed"><h4> Color: @Model.Shoe.Color!.ColorName</h4></div>
    <div class="col-auto m-1 text-center align-content-center align-items-center" style="border:dashed"><h4>Sport: @Model.Shoe.Sports!.SportName</h4></div>
    <div class="col-auto m-1 text-center align-content-center align-items-center" style="border:dashed"><h4>Genre: @Model.Shoe.Genres!.GenreName</h4></div>

</div>

<table class="table table-dark table-hover  ">
    <thead class="border-2">
        <tr bordercolor="dark">
            <th >Shoe</th>
            <th  >
                <a asp-controller="Shoe" asp-action="AddSize" asp-route-Shoeid="@Model.ShoeId" class="btn btn-primary w-25 h-auto align-items-endp">
                    <i class="bi bi-node-plus-fill"></i>
                    Add Size
                </a>
            </th>
        </tr>
        <tr aling="center">
            <th>Sizes</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @if (Model is not null)
        {
            if (Model.Sizes.Count() != 0 && Model.ShoesSizes.Count() != 0)
            {
                for (int i = 0; i < Model.Sizes.Count(); i++)
                {
                    <tr>
                        <td>@Model.Sizes[i].SizeNumber</td>
                        <td>@Model.ShoesSizes[i].QuantityInStock</td>
                    </tr>
                }
            }
        }
        else
        {
            <tr>
                <td>No hay datos en la lista</td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Shoe" asp-action="Index" class="btn btn-info">
    <i class="bi bi-arrow-return-left"></i>
    Back to List
</a>
