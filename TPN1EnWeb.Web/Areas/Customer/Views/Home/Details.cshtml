@model List<ShoeSizeDetailsCustomerAreaVM>
@{
    ViewData["Title"] = "Home Page";
}
@if (Model.Count==0 || Model is null)
{
    <div class="card m-3" style="max-width: 1000px;">
        <div class="row g-0">
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"> "This Shoe doesn't has a size associated, please go back to the menú"</h5>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold">Go back to menu</a>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div class="row">
        <div class="card m-3" style="max-width: 2500px; max-height:3000px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@(string.IsNullOrEmpty(Model[0].Shoe.imageURL)?"/images/d5085741-277d-4509-9ae9-d7e5421f4d70.jpg":Model[0].Shoe.imageURL)" class="img-fluid rounded-start" alt="..." style="width:300px; height:300px; object-fit:fill">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"> "Modelo @Model[0].Shoe.model.ToLower(), @Model[0].Shoe.genre!.ToLower() de color @Model[0].Shoe.color!.ToLower() ideal para @Model[0].Shoe.sport!.ToLower()"</h5>
                        <p class="card-text">@Model[0].Shoe.descripcion</p>
                        <p class="card-text"><small class="text-body-secondary"> Price: @Model[0].Shoe.price</small></p>
                        <p class="card-text"><small class="text-body-secondary"> Cash Price: @Model[0].Shoe.CashPrice.Scale.ToString("N2")</small></p>
                        @foreach (var item in Model)
                        {
                            if (item.Size != null)
                            {
                                if (item.QuantityInStock != 0)
                                {
                                    <a asp-controller="Home" asp-action="Carrito" asp-route-id="@item.ShoeId" class="btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold">@item.Size.SizeNumber</a>
                                }
                                else
                                {
                                    <a asp-controller="Home" asp-action="Carrito" class="btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold disabled">@item.Size.SizeNumber</a>
                                }
                            }
                        }
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold mt-3">Go back to menu</a>

                    </div>
                </div>
            </div>
        </div>

    </div>
}