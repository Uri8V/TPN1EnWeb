<!DOCTYPE html>
<html lang="en">
<head >
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TPN1EnWeb.Web</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.tiny.cloud/1/wd9v0389nuw4oq9n8f1i2e0ies6urzfyt0ycipbzcjaq51g9/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TPN1EnWeb.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css"/>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body style="background-color:#94d2bd">
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow" style="background-color:#0a9396">
            <div class="container-fluid" style="background-color:#0a9396">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Shoes Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1" style="color:crimson">
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="Customer" asp-controller="Home" asp-action="Index" >Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="Admin" asp-controller="Home" asp-action="Privacy" style="color:white">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="Admin" asp-controller="Brand" asp-action="Index" style="color:white">Brands</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="Admin" asp-controller="Colour" asp-action="Index" style="color:white">Colours</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="Admin" asp-controller="Genre" asp-action="Index" style="color:white">Genres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="Admin" asp-controller="Sport" asp-action="Index" style="color:white">Sports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="Admin" asp-controller="Shoe" asp-action="Index" style="color:white">Shoes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="Admin" asp-controller="Size" asp-action="Index" style="color:white">Size</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" >
        <main role="main" class="">
            <partial name="_Notification"/>
            @RenderBody()
        </main>
    </div>  

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - Shoes.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color:black">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
