@model BrandEditVM
@{
    ViewData["Title"] = "Agregar Brand";
}
<form method="post" asp-controller="Brand" asp-action="UpSert">
    <input type="hidden" asp-for="BrandId" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> @(Model.BrandId==0? "Agregar Brand":"Edit Brand")</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> @*Este span es para que me muestre el mensaje de "registro duplicado"*@
    </div>
    <div class="mb-3">
        <label asp-for="BrandName"></label>
        <input asp-for="BrandName" class="form-control"/>
        <span asp-validation-for="BrandName" class="text-danger"></span> @*Este span es para que me muestre el mensaje de "Debe ingresar un registro"*@
    </div>
    @if (Model.BrandId == 0)
    {
        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i>
            Confirm
        </button>
    }
    else
    {
        <button type="submit" class="btn btn-warning">
            <i class="bi bi-save"></i>
            Confirm
        </button>
    }
    <a asp-controller="Brand" asp-action="Index" class="btn btn-info"> 
        <i class="bi bi-arrow-return-left"></i>
        Back to List
    </a>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}